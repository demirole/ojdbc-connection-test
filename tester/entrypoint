#!/bin/bash

JARS=/service
JAVACMD=java

unset CLASSPATH
for J in $(cd "${JARS}"; ls *.jar)
do
    CLASSPATH=${CLASSPATH}${CLASSPATH:+:}${JARS}/${J}
done

export JAVACMD CLASSPATH

if [[ $TNS_ADMIN != '/etc' ]] ; then
  cp /etc/ojdbc.properties $TNS_ADMIN
fi

if [[ $1 =~ ^select|^- ]] ; then
  exec /execute_query "$@"
else
  exec "$@"
fi

